<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <gradient android:startColor="@color/fragment_page_tab_bg_start" android:endColor="@color/fragment_page_tab_bg_end" android:angle="360" android:type="linear"/>
                </shape>
            </item>
            <item android:gravity="center" android:height="72dp" android:width="6dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/color_forward_normal"/>
                    <corners android:radius="3dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_selected="false">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>
</selector>
