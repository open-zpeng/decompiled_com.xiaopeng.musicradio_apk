<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <item>
        <selector>
            <item android:state_enabled="true" android:state_pressed="true">
                <shape android:shape="oval">
                    <solid android:color="#8f000000"/>
                </shape>
            </item>
            <item android:state_enabled="true">
                <shape android:shape="oval">
                    <gradient android:startColor="#52000000" android:endColor="#70000000" android:angle="0" android:type="linear"/>
                </shape>
            </item>
        </selector>
    </item>
    <item>
        <drawable app:rippleRadius="@dimen/x_btn_icon_large_bg_size" app:rippleSupportScale="true" class="com.xiaopeng.xui.drawable.ripple.XRippleDrawable"/>
    </item>
</layer-list>
