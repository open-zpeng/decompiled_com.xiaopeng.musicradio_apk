<?xml version="1.0" encoding="utf-8"?>
<com.xiaopeng.xui.widget.XFrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/layout_root" android:background="@drawable/bg_guess_like_item" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent">
        <FrameLayout android:layout_width="160dp" android:layout_height="160dp">
            <com.xiaopeng.musicradio.widget.MusicCircleImageView android:id="@+id/album_logo" android:layout_width="match_parent" android:layout_height="match_parent" app:border_width="1px" app:round_radius="@dimen/dp_18"/>
            <com.xiaopeng.musicradio.widget.PlayControlView android:layout_gravity="bottom|right" android:id="@+id/play_state" android:layout_width="56dp" android:layout_height="56dp" android:layout_marginRight="10dp" android:layout_marginBottom="10dp"/>
            <com.xiaopeng.xui.widget.XTextView android:id="@+id/tv_speech_num" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/style_speech_num_big_rect_album"/>
            <com.xiaopeng.xui.widget.XImageView android:layout_gravity="right" android:id="@+id/top_right_label" android:layout_width="56dp" android:layout_height="27dp"/>
        </FrameLayout>
        <androidx.constraintlayout.widget.ConstraintLayout android:paddingRight="20dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="20dp" android:layout_marginTop="16dp" android:layout_marginBottom="16dp">
            <com.xiaopeng.xui.widget.XTextView android:textSize="@dimen/x_font_body_01_size" android:textColor="@color/x_theme_text_01" android:ellipsize="end" android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintTop_toTopOf="0"/>
            <com.xiaopeng.xui.widget.XTextView android:textSize="@dimen/x_font_body_02_size" android:textColor="@color/x_theme_text_03" android:ellipsize="end" android:id="@+id/desc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="14dp" android:maxLines="1" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintTop_toBottomOf="@+id/title"/>
            <com.xiaopeng.xui.widget.XTextView android:textSize="@dimen/x_font_body_03_size" android:textColor="@color/x_theme_text_03" android:layout_gravity="bottom" android:id="@+id/play_count" android:layout_width="match_parent" android:layout_height="wrap_content" android:drawableLeft="@drawable/ic_playcount" android:drawablePadding="6dp" android:drawableTint="@color/x_theme_text_03" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintLeft_toLeftOf="0"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
    <View android:background="@drawable/shape_play_selector_20" android:layout_width="match_parent" android:layout_height="match_parent"/>
</com.xiaopeng.xui.widget.XFrameLayout>
