<?xml version="1.0" encoding="utf-8"?>
<com.xiaopeng.xui.widget.XFrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/track_item" android:background="@drawable/bg_track_list_item" android:layout_width="@dimen/play_list_item_width" android:layout_height="@dimen/playlist_height">
