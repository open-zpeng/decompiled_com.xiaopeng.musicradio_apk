            <com.xiaopeng.xui.widget.XTextView android:id="@+id/tv_speech_num3" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/style_speech_num_big_rect_album"/>
        </FrameLayout>
        <FrameLayout android:layout_width="200dp" android:layout_height="60dp" android:layout_marginStart="32dp">
            <com.xiaopeng.xui.widget.XTextView android:textSize="@dimen/x_font_body_02_size" android:textColor="@color/x_theme_text_01" android:gravity="center" android:id="@+id/children_4" android:background="@drawable/x_btn_ghost_small_positive_selector" android:layout_width="200dp" android:layout_height="60dp" android:text="小学儿歌" app:vuiAction="Click" app:vuiEnableViewVuiMode="true"/>
