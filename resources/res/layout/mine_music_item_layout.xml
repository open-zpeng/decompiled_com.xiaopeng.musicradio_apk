        <com.xiaopeng.xui.widget.XRelativeLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
            <com.xiaopeng.xui.widget.XTextView android:id="@+id/tv_title" style="@style/XPMine.MusicTitle"/>
            <com.xiaopeng.xui.widget.XLinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:layout_below="@+id/tv_title">
                <com.xiaopeng.musicradio.view.mymusic.MusicListItemLabelView android:id="@+id/music_label" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <com.xiaopeng.xui.widget.XTextView android:id="@+id/tv_sub_title" style="@style/XPMine.MusicSubTitle"/>
            </com.xiaopeng.xui.widget.XLinearLayout>
        </com.xiaopeng.xui.widget.XRelativeLayout>
        <com.xiaopeng.xui.widget.XCheckBox android:id="@+id/cb_select" android:background="@drawable/ic_checkbox_button_drawable" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="20dp" android:button="@null" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </LinearLayout>
    <com.xiaopeng.musicradio.mine.widget.ItemPlayStatusLayout android:id="@+id/item_play_status_layout" android:background="@drawable/mine_music_item_play_bg" android:layout_width="@dimen/mine_music_item_logo_size" android:layout_height="@dimen/mine_music_item_logo_size" android:layout_marginLeft="192dp" android:layout_centerVertical="true"/>
</com.xiaopeng.xui.widget.XRelativeLayout>
