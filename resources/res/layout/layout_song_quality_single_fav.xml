            <com.xiaopeng.xui.widget.XImageView android:layout_gravity="top|right" android:id="@+id/iv_check_standard" android:background="@drawable/btn_selected_nor" android:duplicateParentState="true" android:layout_width="36dp" android:layout_height="36dp" android:layout_marginTop="26dp" android:layout_marginRight="14dp"/>
