            <LinearLayout android:orientation="vertical" android:id="@+id/ll_quality_perfect" android:duplicateParentState="true" android:layout_width="match_parent" android:layout_height="match_parent">
                <com.xiaopeng.xui.widget.XTextView android:textSize="28sp" android:textColor="@color/text_01" android:id="@+id/tv_perfect" android:duplicateParentState="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="28dp" android:text="SQ无损音质" android:includeFontPadding="false" android:drawablePadding="@dimen/dp_6"/>
