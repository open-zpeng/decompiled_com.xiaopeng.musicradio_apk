        </LinearLayout>
        <com.xiaopeng.musicradio.widget.LoadingTipsView android:id="@+id/allradio_act_loadingview" android:paddingBottom="150dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true" style="@style/LoadingTipsStyle.Smaller"/>
    </RelativeLayout>
</LinearLayout>
