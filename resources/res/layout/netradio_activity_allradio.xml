<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:layout_width="match_parent" android:layout_height="100dp">
        <com.xiaopeng.musicradio.widget.DialogTopLayout android:id="@+id/allradio_act_top_title" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <com.xiaopeng.xui.widget.XTextView android:textSize="@dimen/x_font_body_02_size" android:textColor="@color/x_theme_text_04" android:layout_gravity="center_vertical" android:id="@+id/allradio_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="282dp"/>
