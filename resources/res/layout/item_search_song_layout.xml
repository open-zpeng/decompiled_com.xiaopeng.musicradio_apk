    <com.xiaopeng.xui.widget.XTextView android:id="@+id/tv_sub_title" android:layout_toRightOf="@+id/music_label" android:layout_below="@+id/tv_title" style="@style/SearchSongItem.SubTitle"/>
    <com.xiaopeng.xui.widget.XImageView android:id="@+id/iv_selected_view" android:background="@drawable/music_item_selected_bg" android:layout_width="match_parent" android:layout_height="120dp"/>
</com.xiaopeng.xui.widget.XRelativeLayout>
